<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

    <constant name="struts.enable.DynamicMethodInvocation" value="true" />
    <constant name="struts.devMode" value="true" />
    <constant name="struts.cofiguration.xml.reload" value="true"></constant>



    <!-- Add packages here -->
    <package name="default" namespace="" extends="struts-default">
    	<global-results>
    		<result name="error">/errors.jsp</result>
    	</global-results>
    	<action name="index" class="action.DefaultAction">
    		<result name="success">${rs}</result>
    	</action>
		
    	<action name="index2" class="action.Default1Action">
    		<result name="success">/jsp/index2.jsp</result>
    		<result name="input">/jsp/add_failed.jsp</result>
    		<exception-mapping result="success" exception="java.lang.RuntimeException"></exception-mapping>
    	
    	</action>
    </package>
	

	<package name="house" namespace="/house" extends = "struts-default">
	
		<action name="op_*" class="action.HouseAction" method="{1}">
		
			<result name="{1}_success">/jsp/house/{1}_success.jsp</result>
			<result name="{1}">/jsp/house/{1}.jsp</result>
		</action>
	</package>




	<package name="action1"  namespace="/jsp/erro" extends="struts-default" >
    	<action name="index1" class="action.DefaultAction">
    		<result name="success">/jsp/success.jsp</result>
    		<result name="input">/jsp/index2.jsp</result>
    		<result name="aa">/jsp/index3.jsp</result>
    	</action>
     	<action name="index2" class="action.Default1Action">
    		<result name="success">/jsp/success.jsp</result>
    		<result name="input">/jsp/index2.jsp</result>
    		<result name="aa">/jsp/index3.jsp</result>
    	</action>
    
    </package>	





	  <package name="jsp" namespace="/jsp/erro/jsp/success" extends="struts-default">
    	<action name="index">
    		<result>/jsp/index2.jsp</result>
    	</action>
    
    </package>     

	<package name="user" namespace="/user" extends="default">
		
		<action name="login" class="action.UserBeanAction" >
		
			<result name="success" >/jsp/login_success.jsp</result>
			<result name="input">/jsp/login.jsp</result>
			
			
			
			<result name="error">/errors1.jsp</result>
		
		</action>
		
		<action name="model" class="action.ModelDrivenBeanAction">
			<result name="success">/jsp/modeldriven.jsp</result>	
		
			<result name="input">/jsp/login.jsp</result>
		
		
		
		
		</action>
		<action name="add" class="action.UserBeanAction"  method="add">
		
			<result name="add_success">/jsp/add_success.jsp</result>
			<result name="failed">/jsp/add_failed.jsp</result>
		
		</action>
		<!-- 动态方法是用Demo -->
		<action name="op" class="action.UserBeanAction">
		
			<result name="success">/jsp/login_success.jsp</result>
			<result name="input">/jsp/login.jsp</result>
			<result name="add_success">/jsp/add_success.jsp</result>
			<result name="delete_success">/jsp/delete_success.jsp</result>		
			<result name="update_success">/jsp/update_success.jsp</result>	
			<result name="add_failed">/jsp/add_failed.jsp</result>	
		</action>
	
		<action name="user*" class="action.UserBeanAction" method="{1}">
		
			<result name="{1}_success">/jsp/{1}_success.jsp</result>
		</action>
		
	
	</package>
</struts>
